{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "gcc build",                                       // 对应launch中的"preLaunchTask"
            "command": "D:/Program/minGW/mingw64/bin/gcc.exe",          // 编译器的完整路径
            "args": [                                                   // 传递给编译器的参数列表
                "-fdiagnostics-color=always",                           // 启用彩色诊断信息（错误、警告等）
                "-g",                                                   // 生成调试信息，用于调试
                "${file}",                                              // 当前活动文件（正在编辑的文件）的路径
                "-o",                                                   // 指定输出文件的路径
                "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe"   // 输出文件的路径
            ],
            "options": {
                "cwd": "${fileDirname}"         // 设为当前文件所在目录
//              "cwd": "${workspaceFolder}"     // 设为当前文件所在目录的根目录
            },
            "problemMatcher": [                 // 用于解析编译器输出的错误和警告
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}
