//  C/C++ 配置文件，用于配置 C/C++ 的 IntelliSense（代码补全、错误检查等）
{
    "configurations": [
      {
        "name": "C Project (MinGW)",
        "includePath": [
          "${workspaceFolder}/**"
        ],
        "defines": ["_DEBUG", "UNICODE", "_UNICODE"],             // UNICODE 和 _UNICODE 是 Windows 特有的宏定义
                                                                  // 写跨平台代码 → 建议去掉
        "windowsSdkVersion": "10.0.18362.0",                      // MinGW 通常不需要 Windows SDK
        "compilerPath": "D:/Program/minGW/mingw64/bin/gcc.exe",
        "cStandard": "c17",                                       // C标准
        "cppStandard": "c++17",                                   // 如果不用C++可以删除
        "intelliSenseMode": "gcc-x64"                             //intelliSense指智能代码补全和辅助功能
      }
    ],
    "version": 4
  }
